<Window
    x:Class="_21.TaskTest1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_21.TaskTest1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="118"
            Height="48"
            Margin="69,76,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Single Task Run" />
        <TextBlock
            x:Name="Text1"
            Width="153"
            Height="37"
            Margin="73,34,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="TextBlock"
            TextWrapping="Wrap" />
        <Button
            Width="118"
            Height="48"
            Margin="69,152,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            x:Name="CancelButton"
            Content="Single Task Cancel" Click="CancelButton_Click" />

    </Grid>
</Window>
